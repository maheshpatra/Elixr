<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/Con"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/cpp"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/cpp"
        android:onClick="cpp"
        app:layout_constraintBottom_toBottomOf="@+id/c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toEndOf="@+id/c"
        app:layout_constraintTop_toTopOf="@+id/c"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/html"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/html"
        app:layout_constraintEnd_toEndOf="@+id/java"
        app:layout_constraintStart_toStartOf="@+id/java"
        app:layout_constraintTop_toBottomOf="@+id/java" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/python"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/python"
        android:onClick="python"
        app:layout_constraintBottom_toBottomOf="@+id/java"
        app:layout_constraintEnd_toEndOf="@+id/cpp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/java"
        app:layout_constraintTop_toTopOf="@+id/java"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/java"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/java"
        android:onClick="java"
        app:layout_constraintEnd_toEndOf="@+id/c"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/c"
        app:layout_constraintTop_toBottomOf="@+id/c" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/c"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/c"
        android:onClick="c"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/come"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="92dp"
        android:background="@drawable/come"
        app:layout_constraintBottom_toBottomOf="@+id/html"
        app:layout_constraintEnd_toEndOf="@+id/python"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/html"
        app:layout_constraintTop_toTopOf="@+id/html"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#304FFE"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Choose your language"
        android:textColor="#2962FF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>