<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:id="@+id/Con"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#000">
    <Button
        android:id="@+id/cpp"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/cpp"
        android:onClick="cpp"

        app:layout_constraintBottom_toBottomOf="@+id/c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toEndOf="@+id/c"
        app:layout_constraintTop_toTopOf="@+id/c"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/html"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/html"
        app:layout_constraintEnd_toEndOf="@+id/java"
        app:layout_constraintStart_toStartOf="@+id/java"
        app:layout_constraintTop_toBottomOf="@+id/java" />

    <Button
        android:id="@+id/python"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/python"
        android:onClick="python"
        app:layout_constraintBottom_toBottomOf="@+id/java"
        app:layout_constraintEnd_toEndOf="@+id/cpp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/java"
        app:layout_constraintTop_toTopOf="@+id/java"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/java"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/java"
        android:onClick="java"
        app:layout_constraintEnd_toEndOf="@+id/c"
        app:layout_constraintStart_toStartOf="@+id/c"
        app:layout_constraintTop_toBottomOf="@+id/c" />

    <Button
        android:id="@+id/c"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/c"
        android:onClick="c"
        android:textColor="#FFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/come"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="92dp"
        android:background="@drawable/come"
        app:layout_constraintBottom_toBottomOf="@+id/html"
        app:layout_constraintEnd_toEndOf="@+id/python"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/html"
        app:layout_constraintTop_toTopOf="@+id/html"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_your_language"
        android:textColor="#2962FF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title1"
        app:layout_constraintVertical_bias="0.028" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>